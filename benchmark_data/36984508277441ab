  }

  /* Overlay to hide terms and logo */
  .custom-signup-form iframe::after {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: white; /* Matches your background color */
      z-index: 10;
      pointer-events: none; /* Allows interaction with form beneath */
  }

 /* Add this inside your existing &lt;style&gt; block */
