  }

 /* Add this inside your existing &lt;style&gt; block */
  .portrait-group {
    display: flex;
    gap: 30px;
    align-items: flex-start; /* Adjust alignment to allow images to scale naturally */
    overflow: visible; /* Ensure no cropping happens */
  }

  .portrait {
    flex: 1; /* Makes images share equal space within the parent container */
    max-width: calc(50% - 15px);
    height: auto; /* Maintains aspect ratio */
    object-fit: contain; /* Optional: Ensures content fits without cropping */
  }

  @media (max-width: 1024px) {
    .portrait-group {
      flex-direction: column;
      gap: 30px;
    }
    .portrait {
      width: 100%;
    }
  }


&lt;div class="portrait-group"&gt;
  &lt;img src="portrait1.jpg" class="portrait" alt="Portrait 1 Description"&gt;
  &lt;img src="portrait2.jpg" class="portrait" alt="Portrait 2 Description"&gt;
&lt;/div&gt;

