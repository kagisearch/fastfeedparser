&lt;span class=&quot;n&quot;&gt;a&lt;/span&gt; &lt;span class=&quot;o&quot;&gt;-&lt;/span&gt; &lt;span class=&quot;n&quot;&gt;b&lt;/span&gt;            &lt;span class=&quot;c1&quot;&gt;# {1, 2}
&lt;/span&gt;&lt;span class=&quot;n&quot;&gt;a&lt;/span&gt; &lt;span class=&quot;o&quot;&gt;|&lt;/span&gt; &lt;span class=&quot;n&quot;&gt;b&lt;/span&gt;            &lt;span class=&quot;c1&quot;&gt;# {1, 2, 3, 4, 5, 6}
&lt;/span&gt;&lt;span class=&quot;n&quot;&gt;a&lt;/span&gt; &lt;span class=&quot;o&quot;&gt;&amp;amp;&lt;/span&gt; &lt;span class=&quot;n&quot;&gt;b&lt;/span&gt;            &lt;span class=&quot;c1&quot;&gt;# {3, 4}
&lt;/span&gt;&lt;/code&gt;&lt;/pre&gt;

