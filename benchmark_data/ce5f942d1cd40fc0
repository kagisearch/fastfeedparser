      <category>World</category>
      <guid>https://www.dawn.com/news/1973644</guid>
      <pubDate>Mon, 16 Feb 2026 12:11:48 +0500</pubDate>
      <author>none@none.com (AFP)</author>
      <media:content url="https://i.dawn.com/large/2026/02/16112346be91c05.webp" type="image/webp" medium="image" height="480" width="800">
